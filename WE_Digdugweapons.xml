<!-- Use Barrel of heavy water -->

	<DockScreen UNID="&dswater;"
			name=				"Ship's Cargo Hold"
			type=				"itemPicker"
			backgroundID=		"&rsItemListScreen;"
			>

		<ListOptions
			dataFrom=	"player"
			list=		"awsd -HeavyWater; -itWaterIce;"
			/>

		<Panes>
			<Default
					desc=	"What item do you wish to use the water on?">

				<Actions>
					<Action name="Use on this item" imageID="&rsItemListScreen;" imageIndex="1" default="1" key="U">
						(block (itemType cursor)
							(setq PickedItem (scrGetItem gScreen))
							(setq itemType (itmGetUNID PickedItem))
							

							(switch
								(eq itemType &iticecannon;)
									(block (rechargeNeeded)
										(setq rechargeNeeded (subtract 120 (itmGetcharges PickedItem)))
										(if (gr rechargeNeeded 60)
											(setq rechargeNeeded 60)
											)
										(switch
											(eq rechargeNeeded 0)
												(setq gTitle "The ice shards cannon is already filled with water!")

											(block Nil
												(setq gTitle (cat "You refill the cannon tank with water."))
												(shpRechargeItem gPlayerShip PickedItem rechargeNeeded)
												)
											)
											
										(objRemoveItem gPlayerShip gItem 1)
										
										(scrShowPane gScreen "Used")
										)
										
										(block Nil
											(scrShowPane gScreen "NoEffect")
										)
										))


					</Action>

					<Action name="Cancel" imageID="&rsItemListScreen;" imageIndex="0" cancel="1" key="C">
						<Exit/>
					</Action>

				</Actions>

			</Default>

			<NoEffect>
				<Initialize>
					(scrSetDesc gScreen (cat "You cannot use the water on " (itmGetName PickedItem 4) "!"))
				</Initialize>

				<Actions>
					<Action name="Continue" imageID="&rsItemListScreen;" imageIndex="0" default="1" cancel="1" key="C">
						(scrShowPane gScreen "Default")
					</Action>
				</Actions>
			</NoEffect>

			<Used 
					desc="=gTitle"
					noListNavigation="true"
					>
				<Actions>
					<Action name="Continue" imageID="&rsItemListScreen;" imageIndex="0" default="1" cancel="1" key="C">
						<Exit/>
					</Action>
				</Actions>
			</Used>
		</Panes>

	</DockScreen>

