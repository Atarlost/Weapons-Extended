					(switch
						(gr realshots shots)
							(objadditem gSource (itmCreate &itPteracniumVirtualAmmo; (subtract realshots shots)))
						(ls realshots shots)
							(objremoveitem gSource (itmCreate &itPteracniumVirtualAmmo; (subtract shots realshots)))
